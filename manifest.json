{
  "manifest_version": 2,
  "name": "Wechat",
  "author": "Roxy Lu",
  "description": "Wechat Chrome App",
  "icons": {
      "128": "images/icon_128.png",
      "16": "images/icon_16.png"
   },
  "app": {
      "background": {
         "scripts": [ "js/background.js" ]
      }
   },
   "minimum_chrome_version": "37.0",
   "permissions": [ "notifications", "webview", "clipboardRead", "clipboardWrite", "contextMenus", "fileSystem", "geolocation", "storage", "tts", "unlimitedStorage" ],
  "version": "1.0.0"
}
